#! /bin/sh

# basic functionality
sxhkd &
feh --bg-fill /usr/share/backgrounds/adapta/tealized.jpg
compton -bcf -r 6 -l -6 -t -6 -I 0.08 -O 0.08 &
polybar main &
gnome-screensaver --no-daemon &
numlockx on
ibus-daemon -dsxr

# personally used software
/opt/piavpn/bin/pia-client --quiet &

# Bspwm configuration
bspc monitor -d main code communication IV music

bspc config border_width         2
bspc config window_gap          12

bspc config automatic_scheme     longest_side
bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config click_to_focus       button1
bspc config pointer_modifier     shift

bspc rule -a Gimp desktop='^4' state=floating follow=on
bspc rule -a Wfica desktop='^2' state=tiled follow=on
bspc rule -a Screenkey manage=off
