#!/bin/bash

main () {
    case ${1:-} in
        audio) audioctl show ;;
        bluetooth) btctl show ;;
        packages) packagectl show ;;
        phone) phonectl show ;;
        power) powerctl show ;;
        list-x-options) listXOptions ;;
        show) listXOptions | rofimenu ;;
        *) exit 1 ;;
    esac
}

listXOptions () {
    cat <<EOF
{
    "prompt": "section",
    "commands": [
        {
            "description": "Audio",
            "command": "system-menu audio"
        },
        {
            "description": "Bluetooth",
            "command": "system-menu bluetooth"
        },
        {
            "description": "Packages",
            "command": "system-menu packages"
        },
        {
            "description": "Phone",
            "command": "system-menu phone"
        },
        {
            "description": "Power",
            "command": "system-menu power"
        }
    ]
}
EOF
}

main "$@"
