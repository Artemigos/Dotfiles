#!/bin/bash

set -euo pipefail

# shellcheck source=base.sh
source "$(d script-base)"
@setup 'd widget '

@reg volume 'Volume widget'
volume() {
    echo -n 'ó°•¾  '
    echo -n "$(d audio get-volume)"
    echo '%'
}

@reg tz-clock 'Timezone clock widget'
tz-clock() {
    d require cut date
    local _tz=${1:?Timezone required.}
    local _city
    _city=$(echo -n "$_tz" | cut -d'/' -f2 | tr '_' ' ')
    echo -n "$_city "
    TZ=$_tz date +'%H:%M %Z'
}

@main "$@"
